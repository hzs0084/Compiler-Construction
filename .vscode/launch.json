{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Parser (prompt for file)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-p", "${input:sourceFile}"],
      "justMyCode": true,
      "stopOnEntry": false
    },
    {
      "name": "Debug: Parser (test6.c)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-p", "testing_simple_c_programs/test6.c"],
      "justMyCode": true
    },
    {
      "name": "Debug: Lexer (test6.c)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-l", "testing_simple_c_programs/test6.c"],
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "sourceFile",
      "type": "promptString",
      "description": "Path to .c file (relative to workspace)",
      "default": "testing_simple_c_programs/test6.c"
    }
  ]
}
