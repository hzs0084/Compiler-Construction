{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Parser (prompt for file)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-p", "${input:sourceFile}"],
      "justMyCode": true,
      "stopOnEntry": false
    },
    {
      "name": "Debug: Parser (test6.c)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-p", "tests/codegen-x86/a1.c"],
      "justMyCode": true,
      "stopOnEntry": false
    },
    {
      "name": "Debug: Lexer (test6.c)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/compiler.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["-l", "tests/codegen-x86/a1.c"],
      "justMyCode": true,
      "stopOnEntry": false
    },
    {
      "name": "Debug: RA example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/ra_debug_example.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true,
      "stopOnEntry": false
    }
  ],
  "inputs": [
    {
      "id": "sourceFile",
      "type": "promptString",
      "description": "Path to .c file (relative to workspace)",
      "default": "tests/codegen-x86/a1.c"
    }
  ]
}
